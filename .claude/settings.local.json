{
  "permissions": {
    "allow": [
      "mcp__claude-memory-mcp__memory_add"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/universal-monitor.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/build-status.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/agent-hint.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/arch-reminder.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/session-tracker.ps1"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/universal-monitor.ps1"
          }
        ]
      },
      {
        "matcher": "(Edit|Write|MultiEdit|NotebookEdit)",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/auto-format.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/file-tracker.ps1"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/todo-stats.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/todo-logger.ps1"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/bash-monitor.ps1"
          }
        ]
      },
      {
        "matcher": "(Read|Glob|Grep|LS)",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/file-access-monitor.ps1"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/agent-tracker.ps1"
          }
        ]
      },
      {
        "matcher": "(WebFetch|WebSearch)",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/web-tracker.ps1"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/pre-tool-monitor.ps1"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/session-summary.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/daily-logger.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -File .claude/hooks/cleanup.ps1"
          }
        ]
      }
    ]
  }
}