{
  "base": "ubuntu-22",
  "install": [
    "sudo apt-get update",
    "sudo apt-get install -y build-essential python3 python3-pip sqlite3",
    "pip install -r requirements.txt || true",
    "cargo install cargo-nextest || true",
    "npm install || true"
  ],
  "env": {
    "OPENAI_API_KEY": "@secret:openai",
    "GITHUB_TOKEN": "@secret:github_token"
  }
}
