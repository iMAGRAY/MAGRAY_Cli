# MAGRAY CLI Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# LLM PROVIDERS
# ============================================================================

# Primary LLM provider (required: choose one)
# Options: openai, anthropic, groq, ollama, lmstudio
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Groq Configuration (optional - fast inference)
GROQ_API_KEY=gsk_your-groq-key-here
GROQ_MODEL=mixtral-8x7b-32768

# Ollama Configuration (optional - local models)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LMStudio Configuration (optional - local models)
LMSTUDIO_URL=http://localhost:1234
LMSTUDIO_MODEL=default

# ============================================================================
# MEMORY & STORAGE
# ============================================================================

# Database path (default: ~/.magray/memory.db)
MAGRAY_DB_PATH=~/.magray/memory.db

# Cache directory (default: ~/.magray/cache)
MAGRAY_CACHE_DIR=~/.magray/cache

# Models directory (default: ./models)
MAGRAY_MODELS_DIR=./models

# ============================================================================
# PERFORMANCE
# ============================================================================

# Force CPU mode (disable GPU even if available)
MAGRAY_FORCE_CPU=false

# Maximum batch size for embeddings
MAGRAY_BATCH_SIZE=32

# Memory cache size in MB
MAGRAY_CACHE_SIZE_MB=1024

# ============================================================================
# LOGGING
# ============================================================================

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# Log format: text, json
LOG_FORMAT=text

# Log file path (optional)
LOG_FILE=~/.magray/magray.log

# ============================================================================
# NETWORK
# ============================================================================

# HTTP proxy (optional)
HTTP_PROXY=
HTTPS_PROXY=

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Enable development mode (verbose logging, no caching)
MAGRAY_DEV_MODE=false

# Enable profiling
MAGRAY_PROFILE=false

# Enable telemetry (opt-in)
MAGRAY_TELEMETRY=false

# ============================================================================
# SECURITY
# ============================================================================

# Encryption key for sensitive data (auto-generated if not set)
# MAGRAY_ENCRYPTION_KEY=

# Allowed shell commands (comma-separated, empty = all allowed)
# MAGRAY_ALLOWED_COMMANDS=ls,cat,grep,find

# Maximum file size for operations (MB)
MAGRAY_MAX_FILE_SIZE_MB=100

# ============================================================================
# FEATURES
# ============================================================================

# Enable web search functionality
MAGRAY_ENABLE_WEB_SEARCH=true

# Enable shell command execution
MAGRAY_ENABLE_SHELL=true

# Enable file system operations
MAGRAY_ENABLE_FILE_OPS=true

# Enable git operations
MAGRAY_ENABLE_GIT_OPS=true
