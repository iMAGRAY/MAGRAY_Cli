{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectStats",
  "type": "object",
  "required": [
    "file_types",
    "project_path",
    "scanned_at",
    "total_files",
    "total_lines"
  ],
  "properties": {
    "total_files": {
      "type": "integer",
      "format": "uint",
      "minimum": 0.0
    },
    "total_lines": {
      "type": "integer",
      "format": "uint",
      "minimum": 0.0
    },
    "file_types": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "format": "uint",
        "minimum": 0.0
      }
    },
    "project_path": {
      "type": "string"
    },
    "scanned_at": {
      "type": "string"
    }
  }
}